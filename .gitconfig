[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	dt = difftool
	dy = difftool -y
	mt = mergetool
    dn = diff --name-only --relative
    ri = rebase -i
[user]
	email = chris.chung@winfuncapital.com
	name = chris
[core]
	editor = vim
[merge]
	tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    #prompt = false
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	trustExitCode = true
