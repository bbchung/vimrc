[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	dt = difftool
    dy = "!git difftool -y $1 ':(exclude)*.so.*' #"
    dn = diff --name-only --relative
	mt = mergetool
    ri = rebase -i
    dts = submodule foreach --recursive git difftool -y -- ':(exclude)*.so.*'
    dns = submodule foreach git diff --name-only --relative
[user]
	email = cchung@timelinecapital.com
	name = cchung
[core]
	editor = vim
[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
	trustExitCode = true
[mergetool]
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
