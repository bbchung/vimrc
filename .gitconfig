[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    dt = difftool
    #dy = "!f() { git difftool -y $@ ':(exclude)*.so.*'; }; f"
    dy = difftool -y
    dn = diff --name-only --relative
    mt = mergetool
    ri = rebase -i
    ls = ls-files
    sm = submodule
    fsm = "!f() { git submodule foreach --recursive git $@; }; f"
[user]
	email = afafaf4@gmail.com
	name = bbchung
[core]
    editor = vi
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[diff "so"]
    command = /bin/true
    #textconv = /bin/true
[difftool]
    trustExitCode = true
[mergetool]
    trustExitCode = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[pull]
    rebase = false
