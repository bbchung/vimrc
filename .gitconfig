[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	dt = difftool
    dy = "!git difftool -y $1 -- ':!*.so.*' #"
	mt = mergetool
    dn = diff --name-only --relative
    dcs = submodule foreach --recursive git difftool --cached
    dts = submodule foreach --recursive git difftool ':!*.so.*'
    dns = submodule foreach git diff --name-only --relative
    ri = rebase -i
[user]
	email = cchung@timelinecapital.com
	name = cchung
[core]
	editor = vim
[merge]
	tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    #prompt = false
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[mergetool]
	trustExitCode = true
