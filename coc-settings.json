    "clangd.semanticHighlighting": false,
    "clangd.arguments": ["--background-index", "--pch-storage=memory", "--cross-file-rename"],
	"diagnostic.hintSign": ">",
	"diagnostic.warningSign": "‽",
	"diagnostic.errorSign": "✘",
	"snippets.snipmate.enable": false,
	"yaml.format.enable": true,
    "python.formatting.autopep8Args" : ["-a"],
	"coc.preferences.useQuickfixForLocations": true,
	"snippets.extends": {
		"cpp": [
			"c"
		],
		"javascriptreact": [
			"javascript"
		],
		"typescript": [
			"javascript"
		]
