		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		},
	},
    "clangd.arguments": ["--background-index", "--pch-storage=memory"],
    "clangd.semanticHighlighting": false,
	"diagnostic.hintSign": ">",
	"diagnostic.warningSign": "‽",
	"diagnostic.errorSign": "✘",
	"snippets.snipmate.enable": false,
	"yaml.format.enable": true,
	"r.lsp.diagnostics": false,
    "python.formatting.autopep8Args" : ["-a"],
	"coc.preferences.useQuickfixForLocations": true,
	"snippets.extends": {
		"cpp": [
			"c"
		],
		"javascriptreact": [
			"javascript"
		],
		"typescript": [
			"javascript"
		]
	}
}
