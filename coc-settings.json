{
    "yank.highlight.enable": false,
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        }
    },
    "snippets.ultisnips.enable": false,
    "snippets.extends": {
        "cpp": [
            "c"
        ]
    }
}
