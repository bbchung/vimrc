{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "--background-index"
            ],
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ]
        }
    },
    "diagnostic.warningSign": ">>",
    "snippets.snipmate.enable": false,
    "yaml.format.enable": true,
    "r.lsp.diagnostics": false,
    "coc.preferences.useQuickfixForLocations": true,
    "snippets.extends": {
        "cpp": [
            "c"
        ],
        "javascriptreact": [
            "javascript"
        ],
        "typescript": [
            "javascript"
        ]
    }
}
