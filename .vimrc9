def DoHover()
    if (index(['csv'], &filetype) >= 0)
        exe 'WhatColumn!'
    elseif (index(['vim', 'help'], &filetype) >= 0)
        exe 'h ' .. expand('<cword>')
    else
        if g:CocAction('hasProvider', 'hover')
            g:CocActionAsync('doHover')
        endif
    endif
enddef

